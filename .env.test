# Test Environment Configuration
# Used when running tests locally (CI provides its own env vars)

# Database - Uses local Docker container port (5433)
DATABASE_URL=postgresql://ihms:ihms@localhost:5433/ihms_test

# JWT - Test secrets (safe for testing only)
JWT_SECRET=test-jwt-secret-for-local-testing-only
JWT_REFRESH_SECRET=test-jwt-refresh-secret-for-local-testing-only
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Server
PORT=3011
NODE_ENV=test

# Email (disabled for tests)
RESEND_API_KEY=
EMAIL_FROM_ADDRESS=quotes@test.ihms.app
EMAIL_FROM_NAME=IHMS Quotes Test

# Workiz Integration (disabled for tests)
WORKIZ_API_KEY=
WORKIZ_API_URL=https://api.workiz.com/api/v1
WORKIZ_ENABLED=false

# Quote Expiration
QUOTE_EXPIRATION_DAYS=14

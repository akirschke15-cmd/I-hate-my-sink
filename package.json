{
  "name": "ihms",
  "version": "0.0.1",
  "private": true,
  "description": "I Hate My Sink - Sink Selection Configurator PWA",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @ihms/db generate",
    "db:migrate": "pnpm --filter @ihms/db migrate",
    "db:push": "pnpm --filter @ihms/db push",
    "db:studio": "pnpm --filter @ihms/db studio",
    "db:seed": "tsx scripts/seed-demo-user.ts && tsx scripts/seed-demo-sinks.ts",
    "db:seed:user": "tsx scripts/seed-demo-user.ts",
    "db:seed:sinks": "tsx scripts/seed-demo-sinks.ts",
    "db:seed:rbac": "tsx scripts/seed-demo-users-rbac.ts",
    "db:seed:all": "tsx scripts/seed-demo-user.ts && tsx scripts/seed-demo-sinks.ts && tsx scripts/seed-demo-users-rbac.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.21.5"
    }
  }
}
